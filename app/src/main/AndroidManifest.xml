            </intent-filter>
        </activity>
        <activity android:name=".activity.SecondActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.ThirdActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.FourActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.FiveActivity"
            android:launchMode="singleTask"/>
        <activity android:name=".activity.SixActivity"/>
        <activity
            android:name=".activity.LineChartActivity"
            android:label="@string/title_activity_line_chart" >
        </activity>
        <activity
            android:name=".activity.ColumnChartActivity"
            android:label="@string/title_activity_column_chart" >
        </activity>
        <activity
            android:name=".activity.PieChartActivity"
            android:label="@string/title_activity_pie_chart" >
