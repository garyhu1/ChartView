        <activity
            android:name=".activity.TempoChartActivity"
            android:label="@string/title_activity_tempo_chart" >
        </activity>
        <activity
            android:name=".activity.SpeedChartActivity"
            android:label="@string/title_activity_speed_chart" >
        </activity>
        <activity
            android:name=".activity.ViewPagerChartsActivity"
            android:label="@string/title_activity_view_pager_charts" >
